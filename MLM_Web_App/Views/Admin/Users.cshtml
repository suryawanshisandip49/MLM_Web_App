@model List<MLM_Web_App.Models.User>
@{
    ViewData["Title"] = "Admin Panel - Users (MLM Tree)";
}

<h2 class="mt-3 mb-4">Admin Panel - Users (Collapsible MLM Tree)</h2>

<div class="container">
    @foreach (var user in Model)
    {
        <div class="card shadow mb-3 p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5>@user.FullName (@user.UserCode)</h5>
                    <small>Sponsor: @(user.Sponsor?.FullName ?? "N/A")</small><br />
                    <small>Status: @(user.IsActive ? "Active" : "Inactive")</small>
                </div>
                <div>
                    <a asp-action="ToggleStatus" asp-route-id="@user.Id"
                       class="btn btn-sm @(user.IsActive ? "btn-danger" : "btn-success")">
                        @(user.IsActive ? "Deactivate" : "Activate")
                    </a>

                    @if (user.Level1Members.Any())
                    {
                        <button class="btn btn-primary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#user-@user.Id">
                            Show Referrals
                        </button>
                    }
                </div>
            </div>

            @if (user.Level1Members.Any())
            {
                <div class="collapse mt-3" id="user-@user.Id">
                    <div class="ml-3">
                        @foreach (var l1 in user.Level1Members)
                        {
                            <div class="card border-primary mb-2 p-2">
                                <strong>@l1.FullName (@l1.UserCode)</strong> | Income: ₹@l1.TotalIncome
                                <br />Direct Referrals: @l1.Level1Members.Count()

                                @if (l1.Level1Members.Any())
                                {
                                    <button class="btn btn-sm btn-info mt-1" type="button" data-bs-toggle="collapse" data-bs-target="#l1-@l1.Id">
                                        Show Level 2
                                    </button>

                                    <div class="collapse mt-2" id="l1-@l1.Id">
                                        <div class="ml-3">
                                            @foreach (var l2 in l1.Level1Members)
                                            {
                                                <div class="card border-success mb-1 p-2">
                                                    <strong>@l2.FullName (@l2.UserCode)</strong> | Income: ₹@l2.TotalIncome

                                                    @if (l2.Level1Members.Any())
                                                    {
                                                        <button class="btn btn-sm btn-warning mt-1" type="button" data-bs-toggle="collapse" data-bs-target="#l2-@l2.Id">
                                                            Show Level 3
                                                        </button>

                                                        <div class="collapse mt-2" id="l2-@l2.Id">
                                                            <div class="ml-3">
                                                                @foreach (var l3 in l2.Level1Members)
                                                                {
                                                                    <div class="card border-warning mb-1 p-2">
                                                                        <strong>@l3.FullName (@l3.UserCode)</strong> | Income: ₹@l3.TotalIncome
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
