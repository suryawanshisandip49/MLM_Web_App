@model MLM_Web_App.Models.User
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-5">

    <!-- Welcome Card -->
    <div class="card border-0 shadow-lg rounded-4 mb-4 bg-gradient bg-light">
        <div class="card-body text-center">
            <h2 class="fw-bold mb-2 text-primary">Welcome, @Model.FullName 👋</h2>
            <p class="text-muted mb-0">
                <strong>User ID:</strong> <span class="fw-semibold">@Model.UserCode</span>
            </p>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="row text-center g-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <h6 class="text-uppercase text-muted">User ID</h6>
                <h3 class="fw-bold text-primary">@Model.UserCode</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <h6 class="text-uppercase text-muted">Direct Referrals (Level 1)</h6>
                <h3 class="fw-bold text-success">@Model.Level1Members.Count()</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <h6 class="text-uppercase text-muted">Total Team (L1 + L2 + L3)</h6>
                <h3 class="fw-bold text-info">
                    @(Model.Level1Members.Count() + Model.Level2Members.Count() + Model.Level3Members.Count())
                </h3>
            </div>
        </div>
    </div>

    <!-- Income Summary -->
    <div class="card border-0 shadow-sm rounded-4 mt-5 p-4 bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="fw-bold text-dark mb-0">💰 Total Income</h4>
            <h4 class="fw-bold text-success mb-0">₹@Model.TotalIncome</h4>
        </div>
        <hr />
        <p class="text-muted mb-0">
            <strong>Breakdown:</strong>
            Level 1: ₹100 × @Model.Level1Members.Count() |
            Level 2: ₹50 × @Model.Level2Members.Count() |
            Level 3: ₹25 × @Model.Level3Members.Count()
        </p>
    </div>

    <!-- Direct Referrals Table -->
    <div class="card border-0 shadow-sm rounded-4 mt-5">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h5 class="mb-0">👥 Direct Referrals (Level 1)</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>User Code</th>
                        <th>Joined</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Level1Members.Any())
                    {
                        int i = 1;
                        foreach (var member in Model.Level1Members)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@member.FullName</td>
                                <td>@member.UserCode</td>
                                <td>@member.CreatedAt.ToString("dd-MMM-yyyy")</td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-3">
                                No direct referrals yet.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

<style>
    body {
        background: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        }

    h2, h3, h4, h5 {
        letter-spacing: 0.5px;
    }
</style>
